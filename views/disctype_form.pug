extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') Disc Type:
      input#name.form-control(type='text', placeholder='Enter Disctype here' name='name' required value=(undefined===disctype ? '' : disctype.name) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg