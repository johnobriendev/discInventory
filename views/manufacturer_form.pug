extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='manufacturer_name') Manufacturer:
      input#manufacturer_name.form-control(type='text', placeholder='Enter the Manufacturer Name' name='name' required value=(undefined===manufacturer ? '' : manufacturer.name) )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg