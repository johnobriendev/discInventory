extends layout    

block content 

  h1= title 

  p #[strong DO you really want to delete this Disc Copy?]

  div(style="margin-left:20px")

      p #[strong ID]: #{discinstance._id}

      p #[strong Title: ]
        a(href=discinstance.disc.url) #{discinstance.disc.name + " " + discinstance.plastic + " " + discinstance.color + " " + discinstance.weight}

  form(method='POST')
      div.form-group
        input#id.form-control(type='hidden',name='id', value=discinstance._id )

      button.btn.btn-primary(type='submit') Delete

